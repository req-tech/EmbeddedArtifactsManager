<?xml version="1.0" encoding="UTF-8" ?>
<Module specificationVersion="1.3">
<ModulePrefs title="Embedded Links Creator" height="130" scrolling="true">
	<Require feature="com.ibm.rdm.rm.api"/>
	<Require feature="dynamic-height"/>
	
</ModulePrefs>

<Content type="html">
	<![CDATA[
		<!DOCTYPE html>
			<html lang="en">
            <head>
                <!-- Language settings -->
                <meta charset="utf-8">
                <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />    
				<link rel="stylesheet" href="https://unpkg.com/carbon-components/css/carbon-components.min.css">
				<script src="https://unpkg.com/carbon-components/scripts/carbon-components.min.js"></script>

				<script type="text/javascript" src="./lang_en.js" charset="utf-8"></script>       
    
				<!-- Importing bootstrap and jQuery -->
				<script src="js/jquery-3.6.1.js"></script>
				<link href="css/bootstrap.min.css" rel="stylesheet">
				<script src="js/bootstrap.bundle.min.js"></script>

                <!-- Custom JS-code -->
				<script type="text/javascript" src="./js/main_elc.js" charset="utf-8"></script> 


                <style>
                    #container::-webkit-scrollbar {
                        -webkit-appearance: none;
                        width: 7px;
                    }

                    #container::-webkit-scrollbar-thumb {
                        border-radius: 4px;
                        background-color: rgba(0, 0, 0, .5);
                        -webkit-box-shadow: 0 0 1px rgba(255, 255, 255, .5);
                    }
                    table {
                        font-family: arial, sans-serif;
                        border-collapse: collapse;
                        width: 100%;
                        }

					td, th {
                        border: 1px solid #dddddd;
                        text-align: left;
                        padding: 4px;
                        }

                        tr:nth-child(even) {
                        background-color: #dddddd;
                    }
					.custom-row {
                        padding-top: 5px;
                        padding-bottom: 5px;
                        padding-left: 8px;
                    }
                    p:empty::before {
                        content:"";
                        display:inline-block;
                    }
                </style>
            </head>
			<body onload="onBodyLoad()">

					<table style='margin-top: 5px; border: 0'>
						<tr>
							<td style='text-align: center; font-size:12px;'><a onclick='show_instructions();' style='color:#00F; text-decoration: underline;' id='instructions_button'><span id='str001'></span></a></td>
							<td style='text-align: center; font-size:12px;'><a onclick='show_settings();' style='color:#00F; text-decoration: underline;' id='settings_button'><span id='str002'></span></a></td>
						</tr>
					</table>

					<hr style='padding: 0 !important; margin: 0 !important;'/>

					<div style="font-size:12px; display: none;" id='instructions_div'>
						<b><span id='str003'></span> </b> <span id='str004b'>This widget creates Embeds type links for Text artifacts that contain embedded images and other objects.</span> <br/>
						<ol>
							<li> <span id='str005a'>Open the module or select Artifacts from list view.</span> </li>
							<li> <span id='str006b'>Select operation. <li> - Whole Module button scans the whole module and creates Base Link links for all Embedded artifacts.</li><li> - Selected Modules process all Selected modules (can be long process). </li><li> Selected Items button works in all list views.</li></span> </li>
							<li> <span id='str007a'>Click Reload to see newly created Base Links.</span></li>
						</ol>

						<hr style='padding: 0 !important; margin: 0 !important;'/>
					</div>
					
					<div style="font-size:12px; display: none;" id='settings_div'>
					 This Widget has no settings.
					</div>

				<!-- Div for the form with links -->
				<div class="bx--grid" style="padding-right:0; padding-left:0">
                    <div class="bx--col custom-row">
						<div class="bx--form-item">
						<p class="bx--form__helper-text"><Strong>Create links for Embedded Artifacts for:</Strong> </p>
						<button id="getModule" class="bx--btn bx--btn--primary bx--btn--md" style="width:100%;max-width:none;" onclick="getModule()">Whole Module</button>
						 </div>
					</div>
					<div class="bx--col custom-row">
						<button class="bx--btn bx--btn--default bx--btn--md" style="width:100%;max-width:none;" id="readAllModulesButtonOnClick" onclick="readAllModulesButtonOnClick([],[])">Selected Modules</button>
					</div>
					<div class="bx--col custom-row">
						<button class="bx--btn bx--btn--default bx--btn--md" style="width:100%;max-width:none;" id="readLinksButton" onclick="readLinksButton_onclick([],[])">Selected Items</button>						
					</div>
					<div class="bx--col custom-row bx--form__helper-text" id="statusContainer">
					</div>
					<div class="bx--col custom-row" id="reloadContainer">
						<button class="bx--btn bx--btn--primary bx--btn--md" style="width:100%;max-width:none;display: none;" id="reloadButton" onclick="window.top.location.reload()">Reload Page</button>
					</div>
				
				</div>
			</body>
			</html>

		
		
			]]>
</Content>
</Module>
